<div style="background: #E9F5F5;">
<div class="container">
<br>
<a href="/institute/new" class="btn btn-info" role="button">Add an Institute</a>
<a href="/logout" class="btn btn-danger" role="button" style="float:right;">Logout</a>
<center><h1>List of Institutes</h1></center>
	<%@institute. each do |i|%>
		<div class="row" style="margin:2em;">
			<div class="col-md-2"></div>
			<!-- <a href=""> -->
			<div class="col-md-8" style="background: #fff; border-radius: 10px; padding: 0;">
				<div class="col-md-2" style="padding : 0;">
					<img src="<%=i.logo.url%>" height="100" width="100">
				</div>
				<div class="col-md-10" style="padding: 0 1em 0 0;">
				<h3 style="margin-top: 10px; color: #000;"><%=i.name%></h3>
				<i class="glyphicon glyphicon-map-marker" style="color: #616161;"></i> <span style="color: #616161; font-size: 1.1em;"><%=i.address%></span>
				<a href="/institute/<%=i.id%>/edit" class="btn btn-warning" role="button" style="float:right;">Edit</a>
				</div>
			</div><!-- </a> -->
			<div class="col-md-2"></div>
		</div>

		<%end%>	  
</div>
</div>