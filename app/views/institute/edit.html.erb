<h1>Edit Institute Details</h1>

<br>
<%= form_for :institute, url: institute_path(@institute), method: :patch do |f| %>

<ul class="nav nav-tabs">
<li class="active"><a data-toggle="tab" href="#home">General</a></li>
	<li><a data-toggle="tab" href="#menu1">Info</a></li>
	<li><a data-toggle="tab" href="#menu2">History</a></li>
	<li><a data-toggle="tab" href="#menu3">Admission</a></li>
	<li><a data-toggle="tab" href="#menu4">Fees</a></li>
	<li><a data-toggle="tab" href="#menu5">Events</a></li>
	<li><a data-toggle="tab" href="#menu6">Others</a></li>	
</ul>

<div class="tab-content">
	<div id="home" class="tab-pane fade in active">
		<h3>General</h3>
		  <p>
		    <%= f.label :name_of_institute %><br>
		    <%= f.text_field :name %>
		  </p>
		  <p>
		    <%= f.label :address %><br>
		    <%= f.text_field :address %>
		  </p>
		  <p>
		  	<%= f.label :logo %>
		  	<%= f.file_field :logo %>
		  </p>
		  <p>
		  	<%= f.label :cover %>
		  	<%= f.file_field :cover %>
		  </p>

	</div>
	<div id="menu1" class="tab-pane fade">
		<h3>Info</h3>
		  <p>
		    <%= f.label :info %><br>
		    <%= f.cktext_area :info, :class => 'someclass', :ckeditor => {:language => 'en'} %>
		  </p>
	</div>
	<div id="menu2" class="tab-pane fade">
		<h3>History</h3>
		  <p>
		    <%= f.label :history %><br>
		    <%= f.cktext_area :history, :class => 'someclass', :ckeditor => {:language => 'en'} %>
		  </p>
	</div>
	<div id="menu3" class="tab-pane fade">
		<h3>Admission</h3>
		  <p>
		    <%= f.label :admission %><br>
		    <%= f.cktext_area :admission, :class => 'someclass', :ckeditor => {:language => 'en'} %>
		  </p>
	</div>
	<div id="menu4" class="tab-pane fade">
		<h3>Fee</h3>
		  <p>
		    <%= f.label :fees %><br>
		    <%= f.cktext_area :fees, :class => 'someclass', :ckeditor => {:language => 'en'} %>
		  </p>
	</div>
	<div id="menu5" class="tab-pane fade">
		<h3>Events</h3>
		  <p>
		    <%= f.label :events %><br>
		    <%= f.cktext_area :events, :class => 'someclass', :ckeditor => {:language => 'en'} %>
		  </p>
	</div>
	<div id="menu6" class="tab-pane fade">
		<h3>Others</h3>
		  <p>
		    <%= f.label :others %><br>
		    <%= f.cktext_area :others, :class => 'someclass', :ckeditor => {:language => 'en'} %>
		  </p>
	</div>
</div>

<hr><hr>

  <center><p>
    <%= f.submit %>
  </p></center>
<% end %>

<h2>Upload Images For Gallery Slider Here</h2>

<%= form_for :gallery, url: '/gallery/'+@institute.id.to_s do |f| %>
	<%= f.file_field :gallery, :multiple => true  %>
	<%# f.text_field :institute_id,  %>
	<%= f.submit %>
<%end%>

<h3>Existing Images</h3>
<%@gallery.each do |g|%>
	<img src="<%=g.photo.url%>" height="100" width="100">
<%end%>
	<%# image_tag @gallery.first.photo.url %>



<h2>Upload Images For Events Slider Here</h2>

<%= form_for :event, url: '/event/'+@institute.id.to_s do |f| %>
	<%= f.file_field :event, :multiple => true  %>
	<%# f.text_field :institute_id,  %>
	<%= f.submit %>
<%end%>

<h3>Existing Images</h3>
<%@event_imgs.each do |e|%>
	<img src="<%=e.photo.url%>" height="100" width="100">
<%end%>
	<%# image_tag @gallery.first.photo.url %>	